/* pages/home/home.wxss */

.weather {
  width: 100%;
  height: 50rpx;
}

.img {
  width: 100%;
  height: 100%;
}

.scroll-view_H {
  white-space: nowrap;
}

.scroll-view-item {
  height: 30rpx;
}

.scroll-view-item_H {
  display: inline-block;
  width: 100%;
  height: 30rpx;
}

.swiper-tab {
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 20%;
  color: #777;
}

.on {
  color: #4f9566;
  border-bottom: 5rpx solid #4f9566;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

/*仿京东  */

.big-logo {
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.logoinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  height: 180rpx;
}

.logotext {
  color: #aaa;
  font-size: 22rpx;
}

/* 一直处于底部view */
.play-bar{
    position: fixed;
    bottom:0rpx;
    width:100%;
    height:100rpx;
    background: -webkit-linear-gradient(top, #f9f9f9, #f3f3f3); 
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
